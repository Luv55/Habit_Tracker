<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/iv_hair1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/black_hair"
        android:src="@drawable/circle_hair_black"
        app:layout_constraintBottom_toBottomOf="@+id/iv_hair2"
        app:layout_constraintEnd_toStartOf="@+id/iv_hair2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_hair2" />

    <ImageView
        android:id="@+id/iv_hair2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/brown_hair"
        android:src="@drawable/circle_hair_brown"
        app:layout_constraintBottom_toBottomOf="@+id/iv_hair3"
        app:layout_constraintEnd_toStartOf="@+id/iv_hair3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_hair1"
        app:layout_constraintTop_toTopOf="@+id/iv_hair3" />

    <ImageView
        android:id="@+id/iv_hair3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/blue_hair"
        android:src="@drawable/circle_hair_blue"
        app:layout_constraintBottom_toBottomOf="@+id/iv_hair4"
        app:layout_constraintEnd_toStartOf="@+id/iv_hair4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_hair2"
        app:layout_constraintTop_toTopOf="@+id/iv_hair4" />

    <ImageView
        android:id="@+id/iv_hair4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/blonde_hair"
        android:src="@drawable/circle_hair_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_hair3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>